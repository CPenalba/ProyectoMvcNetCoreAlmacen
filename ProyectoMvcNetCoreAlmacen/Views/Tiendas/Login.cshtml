<section class="vh-100">
	<div class="container-fluid h-custom">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-md-9 col-lg-6 col-xl-5">
				<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid" alt="Sample image">
			</div>
			<div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
				<h2 class="mbr-section-title mbr-fonts-style display-5">Contáctanos</h2>
				<form method="post" action="@Url.Action("Login", "Tiendas")">
					<div data-for="email" class="col-lg-12 col-md-12 col-sm-12 form-group mb-3 mb-3 mb-3 mb-3 mb-3 mb-3 mb-3" style="">
						<p class="item-desc mbr-fonts-style display-4">Correo electronico</p>
						<input type="email" name="correo" placeholder="Enter a valid email address" required data-form-field="email" class="form-control display-4" value="" id="email-contact-form-1-uDfzjMJtky">
					</div>
					<div data-for="email" class="col-lg-12 col-md-12 col-sm-12 form-group mb-3 mb-3 mb-3 mb-3 mb-3 mb-3 mb-3" style="">
						<p class="item-desc mbr-fonts-style display-4">Contraseña</p>
						<input type="password" name="contraseña" placeholder="Enter password" required required data-form-field="email" class="form-control display-4" value="" id="email-contact-form-1-uDfzjMJtky">
					</div>
					<div class="col mbr-section-btn">
						<button type="submit" class="btn btn-secondary display-4">Iniciar sesión</button>

						<p class="item-desc mbr-fonts-style display-4">Don't have an account?<a href="">Register</a></p>
					</div>
				</form>
				@if (ViewBag.Message != null)
				{
					<div class="alert alert-info mt-3">
						@ViewBag.Message
					</div>
				}
			</div>
		</div>
	</div>

</section>

<style>
	.divider:after,
	.divider:before {
		content: "";
		flex: 1;
		height: 1px;
		background: #eee;
	}

	.h-custom {
		height: calc(100% - 73px);
	}

	media (max-width: 450px) {
		.h-custom

	{
		height: 100%;
	}

	}</style>