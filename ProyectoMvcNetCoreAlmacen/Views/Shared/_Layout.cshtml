									<a class="nav-link link text-primary display-4" asp-controller="AlertasStocks" asp-action="Index">AlertasStocks </a>
								</li>
							</ul>
							<div class="mbr-section-btn-main" role="tablist"><a class="btn btn-secondary display-4" asp-controller="Tiendas" asp-action="Index">Perfil tienda</a></div>

						</div>
					</div>
				</nav>
			</section>
		</header>
	}

	<div class="container">
		<main role="main" class="pb-3">
