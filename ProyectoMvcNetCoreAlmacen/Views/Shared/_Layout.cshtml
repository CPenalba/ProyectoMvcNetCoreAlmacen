									<span></span>
									<span></span>
									<span></span>
									<span></span>
								</div>
							</button>
						</div>
						<div class="collapse navbar-collapse" id="navbarSupportedContent">
							<ul class="navbar-nav nav-dropdown" data-app-modern-menu="true">
								<li class="nav-item">
									<a class="nav-link link text-primary display-4" asp-controller="Productos" asp-action="Index">Productos </a>
								</li>
